@model Product

<div class="card mb-2" >
    <a asp-controller="shop" asp-action="Details" asp-route-url="@Model.Url"><img class="card-img-top my-2" style="height: 16rem "  src="~/img/@Model.ImageUrl" alt=""></a>
    
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <div class="d-flex justify-content-between">
            <small class="text-muted">
                <i class="fa-solid fa-turkish-lira-sign"></i> @Model.Price
            </small>
            <a asp-controller="shop" asp-action="AddToFavorites" asp-route-id="@Model.ProductId" class="btn btn-outline-danger btn-sm">

                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart" viewBox="0 0 16 16">
                    <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15"></path>
                </svg>

            </a>
        </div>
        
    </div>

    <div class="card-footer d-flex  justify-content-evenly">
        <a asp-controller="shop" asp-action="Details" asp-route-url="@Model.Url" class="btn btn-secondary btn-sm">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"></path>
            </svg>
           Details
        </a>

        @if (User.Identity.IsAuthenticated)
        {
            <form asp-controller="cart" asp-action="AddToCart" style="display-inline" method="POST">
                <input type="hidden" name="productId" value="@Model.ProductId">
                <input type="hidden" name="quantity" value="1">
                <button type="submit" class="btn btn-success btn-sm">Add To Cart</button>
            </form>
        }
            
    </div>

</div>   


