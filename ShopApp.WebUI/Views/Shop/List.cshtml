@using ShopApp.WebUI.Models;
@model ProductListViewModel
@{
    var popularClass = Model.Products.Count > 2 ? "popular" : "";
    var products = Model.Products;

}
<div class="row">
    <div class="col-md-2">
        @await Component.InvokeAsync("Categories")
      
    </div>

    <div class="col-md-10">
        <div class="row">
            @foreach (var product in Model.Products)

            {
                <div class="col-md-3">
                    @await Html.PartialAsync("_product", product)
                </div>
            }
        </div>

        <div class="row">
            <div class="col">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        @for(int i = 0; i < Model.PageInfo.TotalPages(); i++)
                        {
                            @if (String.IsNullOrEmpty(Model.PageInfo.CurrentCategory))
                            {
                                <li class="page-item @(Model.PageInfo.CurrentPage==i+1?"active":"")">
                                    <a class="page-link" href="/products?page=@(i+1)">@(i + 1)</a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item @(Model.PageInfo.CurrentPage==i+1?"active":"")">
                                    <a class="page-link" href="/products/@Model.PageInfo.CurrentCategory?page=@(i+1)">@(i + 1)</a>
                                </li>
                                
                            }

                        }
                       
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>

            </div>


        </div>
    </div>
</div>

  

