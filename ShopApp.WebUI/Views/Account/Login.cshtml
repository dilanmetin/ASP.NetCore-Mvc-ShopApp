@model LoginModel

<h1 class="h3">Login</h1>
<hr />

<form asp-controller="Account" asp-action="Login" method="POST">
    <div asp-validation-summary="All" class="text-danger col-md-12"></div>

  
    <div class="row">
        <div class="col-md-8">
            
            
            <div class="mb-3 row">
                <label asp-for="UserName" class="col-sm-2 col-form-label">User Name</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="UserName">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-success">Login</button>
                    <a href="/Account/ForgotPassword" class="btn btn-link">Forgot Password</a>
                </div>
            </div>

        </div>
    </div>
</form>



@section Scripts{
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/css/site.css" />

}

