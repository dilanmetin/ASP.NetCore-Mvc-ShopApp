@model RegisterModel



<h1 class="h3">Register</h1>
<hr />


<form asp-controller="Account" asp-action="Register" method="POST">
    <div class="col-md-12">
        <div asp-validation-summary="All" class="text-danger"></div>

    </div>
      <div class="row">
        <div class="col-md-8">
            <div class="mb-3 row">
                <label asp-for="FirstName" class="col-sm-2 col-form-label">First Name</label>
                <div class="col-sm-10">
                    <input  class="form-control" asp-for="FirstName" >
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="LastName" class="col-sm-2 col-form-label">Last Name</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="LastName">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="UserName" class="col-sm-2 col-form-label">User Name</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="UserName">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="RePassword" class="col-sm-2 col-form-label">Re Password</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="RePassword">
                    <span asp-validation-for="RePassword" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="Email" class="col-sm-2 col-form-label">E-mail</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-success">Register</button>
                </div>
            </div>
            <div class=" mt-2 social-auth-links text-center">
                <a asp-action="FacebookLogin" class="btn btn-block btn-primary">
                    <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
                </a>
                <a asp-action="GoogleLogin" class="btn btn-block btn-danger">
                    <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
                </a>

            </div>

         </div>
        
    </div>
    
     

</form>
    


@section Scripts{
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/css/site.css" />

}

